# Outpost V2 Control Plane Configuration

# Server
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# DynamoDB Tables
DYNAMODB_JOBS_TABLE=outpost-jobs
DYNAMODB_TENANTS_TABLE=outpost-tenants
DYNAMODB_API_KEYS_TABLE=outpost-api-keys
DYNAMODB_AUDIT_TABLE=outpost-audit

# ECS Configuration
ECS_CLUSTER_ARN=
ECS_WORKER_TASK_DEFINITION=
ECS_WORKER_SECURITY_GROUP=
ECS_WORKER_SUBNET_IDS=

# EFS Configuration
EFS_FILE_SYSTEM_ID=
EFS_ACCESS_POINT_ID=
EFS_MOUNT_PATH=/mnt/workspaces

# S3 Configuration
S3_OUTPUT_BUCKET=outpost-outputs
S3_WORKSPACE_BUCKET=outpost-workspaces

# Secrets Manager
SECRETS_API_KEYS_ARN=

# CloudWatch
CLOUDWATCH_LOG_GROUP=/outpost/control-plane
CLOUDWATCH_LOG_STREAM_PREFIX=control-plane

# Worker Configuration
WORKER_MAX_POOL_SIZE=10
WORKER_IDLE_TIMEOUT_SECONDS=300
WORKER_TASK_TIMEOUT_SECONDS=3600

# Logging
LOG_LEVEL=info
LOG_PRETTY=true
